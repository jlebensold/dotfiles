# -*- sh -*-

# If this is read by only the login shell then the paths won't grow
# duplicates in subshells, I think.

# Source this file with .bash_profile and not .bashrc

export PATH=$HOME/.scripts:/usr/local/bin:/opt/local/sbin:/opt/local/bin:$PATH
export MANPATH="/usr/local/man:/usr/local/mysql/man:/usr/local/git/man:$MANPATH"

